<h1 class="font-bold text-9xl text-center">So, this is a website for calculating my expenses and income.</h1>
<div class="flex gap-2 font-semibold text-2xl">
  <% if current_user.present? %>
    <%= button_to "Go to Home", homepage_path, method: :get, class: "btn-primary" %>
    <%= button_to "Log Out", destroy_user_session_path, method: :delete, class: "btn-danger" %>
  <% else %>
    <%= button_to "Log In", new_user_session_path, method: :get, class: "btn-primary" %>
    <%= button_to "Sign Up", new_user_registration_path, method: :get, class: "btn-primary" %>
<% end %>
</div>