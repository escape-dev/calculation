<div class="p-6 shadow-2xl rounded-xl space-y-4 w-96">
  <h1 class="font-semibold text-center text-3xl">Sign up</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="mt-4 space-y-4">
      <div class="field">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input #{resource.errors[:email].any? ? 'border-red-500' : ''}" %>
        <% if resource.errors[:email].any? %>
          <p class="form-error"><%= resource.errors[:email].first %></p>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-input #{resource.errors[:password].any? ? 'border-red-500' : ''}" %>
        <% if resource.errors[:password].any? %>
          <p class="form-error"><%= resource.errors[:password].first %></p>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class:"form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input #{resource.errors[:password_confirmation].any? ? 'border-red-500' : ''}" %>
        <% if resource.errors[:password_confirmation].any? %>
          <p class="form-error"><%= resource.errors[:password_confirmation].first %></p>
        <% end %>
      </div>
    </div>

    <%= f.submit "Sign up", class: "btn-primary w-full mt-6" %>
    <p class="text-sm text-center mt-2"> Already have account? <%= link_to "Login", new_session_path(resource_name), :class => "font-semibold" %></p>
  <% end %>
</div>
